<h1>New Employee</h1>

<h2><%= flash[:notice] %> <%= @employee.errors.full_messages.join(', ') if @employee.errors.present? %></h2>

<%= form_for @employee do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %><br><br>

<%= f.label :last_name %>
<%= f.text_field :last_name %><br><br>

<%= f.label :alias %>
<%= f.text_field :alias %><br><br>

<%= f.label :title %>
<%= f.text_field :title %><br><br>

<%= f.label :office %>
<%= f.text_field :office %><br><br>

<%= f.label :img_url %>
<%= f.text_field :img_url %><br><br>

  <h2>Existing Dog:</h2>
  <%= f.collection_select(:dog_id, @all_dogs, :id, :name, include_blank: 'Any') %><br><br>
  <h2>New Dog: </h2>
    <%= f.fields_for :dog_attributes do |b| %>
    <%= b.label :name %>
    <%= b.text_field :name %><br><br>
    <%= b.label :breed %>
    <%= b.text_field :breed %><br><br>
    <%= b.label :age %>
    <%= b.text_field :age %><br><br>
    <% end %>

<%= f.submit "Create Employee" %>
<% end %>
